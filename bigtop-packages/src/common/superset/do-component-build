echo "-------------- Superset-do-component-build-started -----------"

set -ex

base_path=`pwd`

echo "current path: ${base_path}"

. `dirname $0`/bigtop.bom

# Install system package
sudo yum install gcc gcc-c++ libffi-devel python-devel python-pip python-wheel openssl-devel openldap-devel mysql-devel -y
# yum -y install nodejs npm

# Install virtualenv package
pip install virtualenv

# Create python virtual environment
mkdir -p /usr/jdp/current
virtualenv /usr/jdp/current/superset

# Into the Python virtual environment
source /usr/jdp/current/superset/bin/activate

# Hereâ€™s a list of some of the recommended packages.
pip install sqlalchemy-clickhouse
pip install mysqlclient
pip install impyla
pip install pyhive
pip install psycopg2

# Build superset core and assets

cd superset/assets/

sh ./js_build.sh

cd ../../

python setup.py install

mkdir -p build/superset && cp -r /usr/jdp/current/superset/* build/superset/

# save components`s .bin package
tar -zcvf superset-$SUPERSET_VERSION-bin.tar.gz build/
mv superset-$SUPERSET_VERSION-bin.tar.gz ../../../tar/

echo "-------------- Superset-do-component-build-completed --------------"